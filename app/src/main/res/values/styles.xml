<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">14sp</item>

        <item name="android:colorBackground">@color/backgroundPrimaryDark</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeSecond" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">14sp</item>

        <item name="android:colorBackground">@color/backgroundPrimaryDark</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:textColor">#ffffff</item>

    </style>

    <style name="SignInTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:colorBackground">@color/backgroundPrimaryDark</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="ExpandedAppBarTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="DialogCustomTheme" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>


</resources>
