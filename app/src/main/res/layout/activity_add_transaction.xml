<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupSplits.AddTransaction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25dp">

        <EditText
            android:id="@+id/edit_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Amount"
            android:inputType="number"
            android:paddingBottom="15dp"
            android:backgroundTint="@color/textColorSec"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/textColorSec" />

        <EditText
            android:id="@+id/edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Description"
            android:inputType="textPersonName"
            android:paddingBottom="15dp"
            android:backgroundTint="@color/textColorSec"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/textColorSec" />

        <Button
            android:id="@+id/button_sellectpayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:enabled="false"
            android:text="Select the payer"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_add_transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/rubik_medium"
            android:text="Add Transaction"
            android:textAllCaps="false" />

        <ProgressBar
            android:id="@+id/progressbar_adding_transaction"
            style="?android:attr/progressBarStyle"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:visibility="invisible" />
    </LinearLayout>
</RelativeLayout>