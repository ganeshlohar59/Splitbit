<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >

    <item android:state_enabled="false">
        <shape>
            <corners
                android:radius="200dp"
                />
            <gradient
                android:centerX="35%"
                android:centerColor="#FF7EA5"
                android:startColor="#FF7EA5"
                android:endColor="#FF7EA5"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <corners
                android:radius="200dp"
                />
            <gradient
                android:centerX="35%"
                android:centerColor="#ff4180"
                android:startColor="#ff4180"
                android:endColor="#ff4180"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
        </shape>
    </item>
</selector>